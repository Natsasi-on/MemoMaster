<section class="container">
  <div class="mybox w-75 ">
    <div class="d-flex justify-content-between">
      <h2 class="p-2 lh-base shared-title flex-grow-5 ">View Note</h2>
      <a href="/new-note" class="p-2 px-3 btn fw-bold h-25 lh-base rounded-pill signup-btn mt-5 mb-3  delete-btn" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete
      </a>
    </div>

    <form action="/notes/item/<%= noteID %>?_method=PUT" method="POST">
      <div class="form-group ">
        <input type="text" class="w-100 p-3 newnote-input" name="title" value="<%= note.title %>" placeholder="Title">
      </div>
      <div class="form-group mb-3">
        <textarea type="email" class="w-100 p-3 newnote-input" rows="8" id="noteMessage" name="body" placeholder="Take a note..." rows="12"><%= note.body %></textarea>
      </div>
      <div class="row justify-content-end">
        <div class="row w-25">
          <button type="submit" class="col p-2 px-3 btn fw-bold mb-4 lh-base rounded-pill signup-btn ">Update
            Note </button>
        </div>
      </div>

    </form>
  </div>



  <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">You are about to delete a note</h5>
          <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>
            This will delete your note <b class="fw-bold"><%= note.title %></b><br />
            Are you sure?
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

          <form action="/notes/item-delete/<%= noteID %>?_method=DELETE" method="POST" class="position-relative">
            <button type="submit" class="btn btn-primary">Delete Note</button>
          </form>

        </div>
      </div>
    </div>
  </div>
</section>